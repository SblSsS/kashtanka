<%= simple_form_for @language, url: @language.id ? admin_language_path(@language) : admin_languages_path, html: { class: 'col-md-5 col-md-offset-1 resource-form' }, role: 'form' do |f| %>
  <div class="form-group">
    <%= f.input :name,      input_html: { class: 'form-control' } %>
    <%= f.input :iso,       input_html: { class: 'form-control' } %>
    <%= f.input :published, input_html: { class: 'form-control' } %>
  </div>

  <%= f.button :submit, class: 'btn btn-default' %>
<% end %>