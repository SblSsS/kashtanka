<%= simple_form_for @post, url: @post.id ? admin_post_path(@post) : admin_posts_path, html: { class: 'col-md-5 col-md-offset-1 resource-form' }, role: 'form' do |f| %>
  <div class="form-group">
  	<%= f.input :user_id, as: :hidden, input_html: { class: 'form-control', value: current_user.id } %>
    <%= f.input :title,     input_html: { class: 'form-control' } %>
    <%= f.input :body,      input_html: { class: 'form-control' } %>
    <%= f.input :published, input_html: { class: 'form-control' } %>
  </div>

  <%= f.button :submit, class: 'btn btn-default' %>
<% end %>